{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "inherits": ["x86_64"]
    },
    {
      "name": "x86_64",
      "binaryDir": "${sourceDir}/build-x86_64",
      "toolchainFile": "${sourceDir}/toolchain.x86_64.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x86_64-release",
      "binaryDir": "${sourceDir}/build-x86_64-release",
      "toolchainFile": "${sourceDir}/toolchain.x86_64.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    },
    {
      "name": "aarch64",
      "binaryDir": "${sourceDir}/build-aarch64",
      "toolchainFile": "${sourceDir}/toolchain.aarch64.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "aarch64-release",
      "binaryDir": "${sourceDir}/build-aarch64-release",
      "toolchainFile": "${sourceDir}/toolchain.aarch64.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    }
  ]
}
